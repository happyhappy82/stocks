---
interface Props {
  slug: string;
  title: string;
  date: string;
  excerpt: string;
}

const { slug, title, date, excerpt } = Astro.props;

// 날짜 포맷팅
function formatDate(dateStr: string): string {
  const d = new Date(dateStr);
  return `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2, '0')}-${String(d.getDate()).padStart(2, '0')}`;
}
---

<a class="block py-4" href={`/${slug}`}>
  <article>
    <h2 class="text-[28px] font-black leading-none mb-2 text-gray-900">
      {title}
    </h2>
    <p class="text-[13px] text-gray-700">{formatDate(date)}</p>
    <p class="mt-1">{excerpt}</p>
  </article>
</a>
