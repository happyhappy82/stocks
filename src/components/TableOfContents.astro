---
interface TocItem {
  id: string;
  text: string;
  level: number;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

{items.length > 0 && (
  <nav class="sticky top-8 p-5 bg-gray-50 rounded-lg">
    <h2 class="text-lg font-bold mb-4">목차</h2>
    <ul class="space-y-2 text-sm">
      {items.map((item) => (
        <li style={`margin-left: ${(item.level - 2) * 0.75}rem`}>
          <a
            href={`#${item.id}`}
            class="text-gray-600 hover:text-blue-600 hover:underline"
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
